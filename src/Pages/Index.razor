        </MudItem>
        <MudItem xs="4" class="d-flex justify-start align-start">
            <MudButtonGroup Color="Color.Primary" OverrideStyles="false" Variant="Variant.Outlined">
                <MudButton Style="@mensual" OnClick="@(()=> OnSuscriptionSelect("Mensual"))">Mensual</MudButton>
                <MudButton Style="@trimestral" OnClick="@(()=> OnSuscriptionSelect("Trimestral"))">Trimestral</MudButton>
                <MudButton Style="@anual" OnClick="@(()=> OnSuscriptionSelect("Anual"))">Anual</MudButton>
            </MudButtonGroup>
        </MudItem>
    </MudItem>
    <MudItem xs="12" Class="d-flex justify-center mt-8">
        <MudGrid  Style="width: 80%">
            <MudItem xs="4">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5"><b>Plan Básico</b></MudText>
                            <MudText Typo="Typo.h3">
                                @if(mensual == selectedColor)
                                {
                                    <b>$9.99</b>
                                }
                                else if(trimestral == selectedColor)
                                {
                                    <b>$24.99</b>
                                }
                                else if(anual == selectedColor)
