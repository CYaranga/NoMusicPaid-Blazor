@code
{
    string defaultColor = "border: 1px solid white; color: white";
    string selectedColor = "border: 1px solid red; color: red";

    string mensual = "";
    string trimestral = "";
    string anual = "";

    protected override async Task OnInitializedAsync()
    {
        mensual = selectedColor;
        trimestral = defaultColor;
        anual = defaultColor;
        //var content = await Http.GetStringAsync("data/NoMusicData.csv");
        //Console.WriteLine(content);
    }

    private void OnSuscriptionSelect(string suscription)
    {
        

        switch (suscription)
        {
            case "Mensual":
                mensual = selectedColor;
                trimestral = defaultColor;
                anual = defaultColor;
                break;
            case "Trimestral":
                mensual = defaultColor;
                trimestral = selectedColor;
                anual = defaultColor;
                break;
            case "Anual":
                mensual = defaultColor;
                trimestral = defaultColor;
                anual = selectedColor;
                break;
        }
    }
}