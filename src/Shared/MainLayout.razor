@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">No Music Paid</MudText>
        <MudSpacer />
        <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Primary" Class="mr-2">Login</MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Primary">SignUp</MudButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>


@code
{
    private bool _isDarkMode = true;
    private MudTheme _theme = new(){
        PaletteDark = new PaletteDark
        {
            Black = "#272c34",
            Background = "#0F0F0F",
            AppbarBackground = "#0F0F0F",
        }
    };
}