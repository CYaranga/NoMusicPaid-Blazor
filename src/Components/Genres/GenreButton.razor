@namespace ComponentsCustom.Genres
<div style="max-width: 150px; position: relative;">
    <MudImage Src="@Image" Alt="Mony the dog" 
              Height="150" Width="150" Style="max-height:150px" 
              Elevation="25" Class="rounded-lg" ObjectFit="ObjectFit.Cover"/>
    <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: rgba(25, 7, 7, 0.5); padding: 5px; width: 100%; height: 100%;">
        <MudText Typo="Typo.h6" Style="text-align: center; margin: 0; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);"><b>@GenreName</b></MudText>
    </div>
</div>
@code {
    [Parameter]
    public string? GenreName { get; set; }

    [Parameter]
    public string Image { get; set;} = "https://picsum.photos/150";
}